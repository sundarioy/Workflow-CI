name: stroke_prediction_mlflow_project_tuned

python_env: python_env.yaml

entry_points:
  main:
    parameters:
      experiment_name:
        type: string
        default: "stroke_prediction_ci"
        description: "Name of the MLflow experiment"
      data_path:
        type: string
        default: "stroke_data_preprocessing"
        description: "Path to the preprocessed data directory"
    command: "python modelling.py --experiment-name {experiment_name} --data-path {data_path}"
  
  no_tuning:
    parameters:
      experiment_name:
        type: string
        default: "stroke_prediction_ci_no_tuning"
        description: "Name of the MLflow experiment"
      data_path:
        type: string
        default: "stroke_data_preprocessing"
        description: "Path to the preprocessed data directory"
    command: "python modelling.py --experiment-name {experiment_name} --data-path {data_path} --no-tuning"
  
  verbose:
    parameters:
      experiment_name:
        type: string
        default: "stroke_prediction_ci_verbose"
        description: "Name of the MLflow experiment"
      data_path:
        type: string
        default: "stroke_data_preprocessing"
        description: "Path to the preprocessed data directory"
    command: "python modelling.py --experiment-name {experiment_name} --data-path {data_path} --verbose"
  
  fast:
    parameters:
      experiment_name:
        type: string
        default: "stroke_prediction_ci_fast"
        description: "Name of the MLflow experiment"
      data_path:
        type: string
        default: "stroke_data_preprocessing"
        description: "Path to the preprocessed data directory"
    command: "python modelling.py --experiment-name {experiment_name} --data-path {data_path} --no-tuning"